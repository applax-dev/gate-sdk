{
    "name": "applax-dev/gate-sdk",
    "description": "Official PHP SDK for Appla-X Gate API v0.6 - Secure payment processing, order management, and merchant services",
    "type": "library",
    "keywords": [
        "appla-x",
        "payment",
        "gateway",
        "sdk",
        "api",
        "credit-card",
        "paypal",
        "apple-pay",
        "google-pay",
        "e-commerce",
        "merchant",
        "subscription",
        "fintech"
    ],
    "homepage": "https://github.com/applax-dev/gate-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Appla-X Development Team",
            "email": "ike@appla-x.com",
            "homepage": "https://appla-x.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "monolog/monolog": "^2.0|^3.0",
        "mockery/mockery": "^1.4",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "suggest": {
        "monolog/monolog": "For advanced logging capabilities",
        "symfony/cache": "For response caching",
        "ramsey/uuid": "For UUID validation and generation"
    },
    "autoload": {
        "psr-4": {
            "ApplaxDev\\GateSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplaxDev\\GateSDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-clover": "phpunit --coverage-clover coverage.xml",
        "phpstan": "phpstan analyse src --level 8",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "ci": [
            "@quality",
            "@test-clover"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/applax-dev/gate-sdk/issues",
        "docs": "https://docs.appla-x.com/",
        "source": "https://github.com/applax-dev/gate-sdk"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}